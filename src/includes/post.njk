	<section class="main-content-md">
		<div class="container-minimal">

					<!-- post single -->
                    <div class="post post-single">
						<!-- post header -->
						<div class="post-header post-px">
							<ul class="meta list-inline mb-0">
								<li class="list-inline-item"><a href="#"><img src="/assets/images/other/author-sm.png" class="author" alt="author"/>{{ author }}</a></li>
